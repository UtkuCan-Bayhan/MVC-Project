@model Product

<form method="POST" class="my-2" action="">
    <input type="hidden" name="ProductId" value="@Model.ProductId">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control">
    </div>
     <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" value="@Model.Description" style="width: 100%;" class="control"></textarea>
    </div>
     <div class="form-group">
        <label for="CategoryId">Category</label>
        @* <select style="width: 100%;" value="@Model.CategoryId" asp-items="@ViewBag.Categories" asp-for="CategoryId" class="control"> *@
            <option selected disabled>Choose</option>
            
        </select>
    </div>
     <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" value="@Model.Price" class="form-control">
    </div>
     <div class="form-group">
        <label for="ImageUrl">imageUrl</label>
        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>