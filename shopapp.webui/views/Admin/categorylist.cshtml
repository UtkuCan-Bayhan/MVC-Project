@model ProductDetailModel

<a class="btn btn-primary btn-sm my-2" href="/admin/category/create">Create Category</a>



<div class="card">
        <div class="row">
                <div class="col-md-12">
        
               
    <div class="card-header text-center">
       <h3>All Categories</h3> 

    </div>
    <div class="card-body mx-auto text-center">
        @foreach (var item in Model.Categories)
        {
                <div class="row">
                        <div class="col-4">
                        <h4 > <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3" >@item.Name</a> </h4>
                        </div>
                        <div class="col-4">
                                <p>@item.Description</p>
                        </div>
                        <div class="col-4">
                         <a href="/admin/category/@item.CategoryId"><button class="btn btn-primary btn-sm">Edit</button></a>

                         <form style="display: inline;" action="/admin/deletecategory" method="post">
                        <input type="hidden" name="CategoryId" value="@item.CategoryId">
                         <button  type="submit" class="btn btn-danger btn-sm">Delete</button>

                         </form>
                        </div>
                </div>
        

         
         
        }
                </div>
        </div>

    </div>
</div>


        
        
        
        